<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registration">

    <fragment
        android:id="@+id/registration"
        android:name="com.example.fitness.registration.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registration_to_planFragment"
            app:destination="@id/planFragment" />
    </fragment>
    <fragment
        android:id="@+id/planFragment"
        android:name="com.example.fitness.planfragment.PlanFragment"
        android:label="fragment_plan"
        tools:layout="@layout/fragment_plan" />
    <fragment
        android:id="@+id/activityFragment"
        android:name="com.example.fitness.activities.ActivityFragment"
        android:label="fragment_activity"
        tools:layout="@layout/fragment_activity" />
    <fragment
        android:id="@+id/leaguesFragment"
        android:name="com.example.fitness.leagues.LeaguesFragment"
        android:label="fragment_leagues"
        tools:layout="@layout/fragment_leagues" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.fitness.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/workoutsFragment"
        android:name="com.example.fitness.workouts.WorkoutsFragment"
        android:label="fragment_workouts"
        tools:layout="@layout/fragment_workouts" >
        <action
            android:id="@+id/action_workoutsFragment_to_exersicesFragment"
            app:destination="@id/exersicesFragment" />
    </fragment>
    <fragment
        android:id="@+id/exersicesFragment"
        android:name="com.example.fitness.exercises.ExersicesFragment"
        android:label="fragment_exersices"
        tools:layout="@layout/fragment_exersices" >
        <action
            android:id="@+id/action_exersicesFragment_to_descriptionExercisesFragment"
            app:destination="@id/descriptionExercisesFragment" />
    </fragment>
    <fragment
        android:id="@+id/descriptionExercisesFragment"
        android:name="com.example.fitness.description.DescriptionExercisesFragment"
        android:label="fragment_description_exercises"
        tools:layout="@layout/fragment_description_exercises" />
</navigation>