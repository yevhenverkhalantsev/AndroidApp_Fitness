<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.exercises.workouts.WorkoutsFragment">



    <TextView
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:text="@string/categories"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/get_started_icon"
        android:src="@drawable/getstarted"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/categories"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/get_started"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="@string/getStarted"
        app:layout_constraintBottom_toBottomOf="@+id/get_started_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/get_started_icon"
        app:layout_constraintTop_toTopOf="@+id/get_started_icon" />

    <ImageView
        android:id="@+id/lose_weight_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/loseweight"
        android:text="@string/loseWeight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_started_icon" />

    <TextView
        android:id="@+id/lose_weight"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="@string/loseWeight"
        app:layout_constraintBottom_toBottomOf="@+id/lose_weight_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lose_weight_icon"
        app:layout_constraintTop_toBottomOf="@+id/get_started_icon" />

    <ImageView
        android:id="@+id/beach_ready_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/beachready"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lose_weight_icon" />

    <TextView
        android:id="@+id/beach_ready"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="@string/beachReady"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/beach_ready_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/beach_ready_icon"
        app:layout_constraintTop_toTopOf="@+id/beach_ready_icon" />

    <ImageView
        android:id="@+id/get_fit_icon"
        android:src="@drawable/getfit"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/beach_ready_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/get_fit"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="@string/getFit"
        app:layout_constraintBottom_toBottomOf="@+id/get_fit_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/get_fit_icon"
        app:layout_constraintTop_toBottomOf="@+id/beach_ready_icon" />





</androidx.constraintlayout.widget.ConstraintLayout>